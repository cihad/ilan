<%= page_title t('.cities') %>
<% breadcrumbs.item t('home'), root_path %>
<% breadcrumbs.item t('.cities') %>


<table class="table">
  <thead>
    <tr>
      <th><%=t '.city' %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= link_to t('.edit'), edit_city_path(city) %></td>
        <td><%= link_to t('.destroy'), city, method: :delete, data: { confirm: t('.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new_city'), new_city_path, class: "btn btn-primary" %>
